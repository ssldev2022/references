<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/testGray2"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/lv_base_forum_detail_divider_layer_2"
        android:layout_width="12dp"
        android:layout_height="match_parent"
        android:layout_marginStart="6dp"
        android:layout_marginTop="4dp">

        <View
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
            android:background="@color/testGray4"
            android:layout_marginStart="6dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/lv_base_forum_detail_iv_emblem"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/epl_manchesterunited" />

            <TextView
                android:layout_marginStart="4dp"
                android:id="@+id/lv_base_forum_detail_tv_uname"
                style="@style/texts.body"
                android:layout_width="wrap_content"
                android:text="asdf"/>

            <TextView
                android:layout_marginStart="4dp"
                android:id="@+id/lv_base_forum_detail_tv_middledot"
                style="@style/texts.body"
                android:layout_width="wrap_content"
                android:text="@string/middle_dot"/>

            <TextView
                android:layout_marginStart="4dp"
                android:id="@+id/lv_base_forum_detail_tv_timestamp"
                style="@style/texts.description"
                android:layout_width="wrap_content"
                android:text="4h"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lv_base_forum_detail_tv_desc"
                style="@style/texts.body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="asdfasdfasdfasf"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/lv_base_forum_detail_btn_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/testGray2"
                app:srcCompat="@drawable/ic_like" />

            <TextView
                android:id="@+id/lv_base_forum_detail_tv_like"
                style="@style/texts.body"
                android:layout_width="wrap_content"
                android:layout_marginStart="4dp"
                android:text="35"/>

            <ImageButton
                android:id="@+id/lv_base_forum_detail_btn_ycard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="@color/testGray2"
                app:srcCompat="@drawable/ic_ycard" />

            <TextView
                android:id="@+id/lv_base_forum_detail_tv_ycard"
                style="@style/texts.body"
                android:layout_width="wrap_content"
                android:layout_marginStart="4dp"
                android:text="35"/>

            <TextView
                android:id="@+id/lv_base_forum_detail_btn_reply"
                style="@style/texts.body"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:text="Reply"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>