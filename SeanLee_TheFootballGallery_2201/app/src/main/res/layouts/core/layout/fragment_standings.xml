<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/testGray1">

    <TextView
        android:id="@+id/standings_teamname"
        style="@style/texts.body"
        android:textAlignment="center"
        android:text="Team"

        android:paddingTop="6dp"
        android:paddingBottom="6dp"

        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/standings_gl2"
        app:layout_constraintEnd_toEndOf="@id/standings_gl2"
        />

    <TextView
        android:id="@+id/standings_mp"
        style="@style/texts.description"
        android:textAlignment="center"
        android:text="MP"

        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="@id/standings_teamname"
        app:layout_constraintBottom_toBottomOf="@id/standings_teamname"
        app:layout_constraintStart_toEndOf="@id/standings_gl3"
        app:layout_constraintEnd_toStartOf="@id/standings_gl4"
        />

    <TextView
        android:id="@+id/standings_pts"
        style="@style/texts.body"
        android:textAlignment="center"
        android:text="Pts"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="@id/standings_teamname"
        app:layout_constraintBottom_toBottomOf="@id/standings_teamname"
        app:layout_constraintStart_toEndOf="@id/standings_gl4"
        app:layout_constraintEnd_toStartOf="@id/standings_gl5"/>

    <TextView
        android:id="@+id/standings_w"
        style="@style/texts.description"
        android:textAlignment="center"
        android:text="W"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="@id/standings_pts"
        app:layout_constraintBottom_toBottomOf="@id/standings_pts"
        app:layout_constraintStart_toEndOf="@id/standings_gl5"
        app:layout_constraintEnd_toStartOf="@id/standings_gl6"/>

    <TextView
        android:id="@+id/standings_d"
        style="@style/texts.description"
        android:textAlignment="center"
        android:text="D"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="@id/standings_pts"
        app:layout_constraintBottom_toBottomOf="@id/standings_pts"
        app:layout_constraintStart_toEndOf="@id/standings_gl6"
        app:layout_constraintEnd_toStartOf="@id/standings_gl7"/>

    <TextView
        android:id="@+id/standings_l"
        style="@style/texts.description"
        android:textAlignment="center"
        android:text="L"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="@id/standings_pts"
        app:layout_constraintBottom_toBottomOf="@id/standings_pts"
        app:layout_constraintStart_toEndOf="@id/standings_gl7"
        app:layout_constraintEnd_toStartOf="@id/standings_gl8"/>

    <TextView
        android:id="@+id/standings_gd"
        style="@style/texts.description"
        android:textAlignment="center"
        android:text="GD"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="@id/standings_pts"
        app:layout_constraintBottom_toBottomOf="@id/standings_pts"
        app:layout_constraintStart_toEndOf="@id/standings_gl8"
        app:layout_constraintEnd_toEndOf="parent"/>


    <ListView
        android:id="@+id/frag_standings_lv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/standings_teamname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/standings_gl2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.26" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/standings_gl3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.51" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/standings_gl4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.59" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/standings_gl5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.68" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/standings_gl6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.76" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/standings_gl7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.84" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/standings_gl8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92" />

</androidx.constraintlayout.widget.ConstraintLayout>